<div class="mx-auto max-w-7xl">
  <h1><%= t ".title" %></h1>

  <div class="flex justify-between items-center mb-4">
    <%= link_to t(".create_product"), new_product_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t ".name" %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t ".actions" %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @products.each do |product| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to product.name, product_path(product), class: "text-indigo-600 hover:text-indigo-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to t(".edit"), edit_product_path(product), class: "text-indigo-600 hover:text-indigo-900" %>
              <%= link_to t(".delete"), product_path(product), 
                  data: { turbo_method: :delete, turbo_confirm: t(".confirm_delete") },
                  class: "ml-2 text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>